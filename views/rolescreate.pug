extends index.pug

block content
  .layout-col
    .section-hdg.section-hdg-1 Create Role in #{domain.name}
    .user-listing.layout-col
      form(action="/roles/" method="post")
        input(id="domainid" type="hidden" name="domainid" value=domain.id)
        .inputrolename
          input#name(type="text" name="name" placeholder="name of role" autofocus)
        .inputeroledescription
          input#description(type="text" name="description" placeholder="description of role")
        .inputrolecapabilities
          input#capabilities(type="text" name="capabilities" placeholder="capabilities object")
        .submit.itemdetail.layout-col
          .label Actions:
          .data
            input#submit.btn.normal.buttonconfirm(type="submit" value="Confirm")
            a.btn.cancel.buttoncancel(href="/roles/") Cancel

