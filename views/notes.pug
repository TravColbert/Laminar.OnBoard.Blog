extends index.pug

block content
  section.layout-width-sd.layout-col
    .section-hdg.section-hdg-1 Notes (#{notes.length})
    .layout-row.layout-width-1-1
      .layout-col.layout-width-1-1.layout-sd-width-5-8.layout-lg-width-5-8.layout-xl-width-4-8
        ul.itemlist
          each note in notes
            - let baseUrl = "/notes/";
            - let targetLoc = baseUrl + note.id + "/";
            //- li.layout-col.clickable(onclick="goTo('" + targetLoc + "')")
            li.layout-col
              .itemdetail.layout-col
                .label Name:
                .data #[a(href=targetLoc) #{note.name}]
              if(note.user)
                .itemdetail.layout-col
                  .label Author:
                  .data #{note.user.firstname} #{note.user.lastname}
              if note.description
                .itemdetail.layout-col
                  .label Description:
                  .data #{note.description}
              if(note.domain)
                .itemdetail.layout-col
                  .label Domain
                  .data #{note.domain.name}
        #note_add_button_container.addnote.layout-row.layout-justify-between.authUI(data-fetch="note_add" data-href="/actions/create/notes/")
      .description.layout-col.layout-xs-hidden.layout-sm-hidden.layout-md-hidden.layout-sd-width-3-8.layout-lg-width-3-8.layout-xl-width-4-8
        .infotext.section-hdg.section-hdg-3 Note List View
        .infotext This is a list of notes.
