extends index.pug

block aside
  aside.sidebar
    if(user)
      article#actions
        .hdg.hdg-2 Actions
        #note_add_button_container.addnote.authUI(data-fetch="note_add" data-href="/actions/create/notes/")
        #note_edit_button_container.editnote.authUI(data-fetch="note_edit" data-href="/notes/" + notes.id + "/actions/edit/")
      +list-user-invites()
      article#articles
        include blog-list
      +list-user-domains("Domains")
      +create-or-see-domains("Domain")
    if(!user)
      if(notes && notes.length>0)
        article#articles
          include blog-list
      article#getstarted
        //- .hdg.hdg-2 Get Started!
        +login-or-register("Login with your account to begin using your cool app!","Register with your email address to create an account.")

block content
  section.blog
    article.main
      .hdg.hdg-2.articletitle #{notes.name}
      .body
        .articledescription #{notes.description}
        .articlemetadata
          .articlemeta.user
            label.label author:
            .data #{notes.user.firstname} #{notes.user.lastname}
          .articlemeta.updated
            label.label updated on:
            .data #{notes.updatedAt.toLocaleDateString()}
          .articlemeta.domain
            label.label category:
            .data #{notes.domain.name}
        .articlebody !{notes.html}

