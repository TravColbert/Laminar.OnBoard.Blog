extends index.pug

block content
  section.layout-width-sd.layout-col
    .section-hdg.section-hdg-1 #{note.name}
    .layout-row.layout-width-1-1
      .item-listing.layout-col.layout-width-1-1.layout-sd-width-5-8.layout-lg-width-5-8.layout-xl-width-5-8
        .itemdetail.layout-col
          .data #{note.description}
        .itemdetail.subdata.layout-col
          label.label Author
          .data #{note.user.firstname} #{note.user.lastname}
        .itemdetail.subdata.layout-col
          label.label Last Updated
          .data #{note.updatedAt}
        .itemdetail.layout-col
          .data#htmldown-div.layout-col
          .data#markdown-div #{note.body}
        if(user)
          #note_edit_button_container.editnote.layout-row.layout-justify-between.authUI(data-fetch="note_edit" data-href="/notes/" + note.id + "/actions/edit/")
      .description.layout-col.layout-xs-hidden.layout-sm-hidden.layout-md-hidden.layout-sd-width-3-8.layout-lg-width-3-8.layout-xl-width-3-8
        .infotext.section-hdg.section-hdg-3 Other Entries
        each noteItem in notes
          if(noteItem.id!=note.id)
            .infotext.layout-col(onclick="document.location='/blog/" + noteItem.id + "'")
              .section-hdg.section-hdg-3 #{noteItem.name}
              .data #{noteItem.user.firstname} #{noteItem.user.lastname}
              .data #{noteItem.updatedAt}
        .infotext This is a list of users. You may edit the user's details by clicking on a user entry.
        .infotext Click the "Add User" button to create a new user.
        .infotext Each user is given a user ID that is used by stockr to keep track of the user and the user's cases.

block scripts
  script(src='/js/markdown.js')
