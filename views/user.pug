extends index.pug

block content
  section.layout-width-sd.layout-col
    .section-hdg.section-hdg-1 User #{user.fullname}
    .layout-row.layout-width-1-1
      //- .layout-col.layout-width-1-1.layout-sd-width-5-8.layout-lg-width-5-8.layout-xl-width-4-8
      .user-listing.layout-col.layout-width-1-1.layout-sd-width-5-8.layout-lg-width-5-8.layout-xl-width-4-8
        .itemdetail.layout-col
          label.label(for="email") Email:
          .data #{user.email}
        .itemdetail.layout-col
          label.label(for="partnum") First Name:
          .data #{user.firstname}
        .itemdetail.layout-col
          label.label(for="partnum") Last Name:
          .data #{user.lastname}
        .itemdetail.layout-col
          label.label(for="partnum") Verified:
          .data #{user.verified}
        .itemdetail.layout-col
          label.label(for="partnum") Disabled:
          .data #{user.disabled}
        .itemdetail.layout-col
          label.label(for="partnum") Domains:
            each role in user.roles
              each domain in role.domains
                - let starred = (domain.id==user.defaultDomainId) ? "<- (default)" : null;
                .data #[a(href="/domains/" + domain.id + "/") #{domain.name} #{starred}]
        .itemdetail.layout-col
          label.label Roles:
            each role in user.roles
              .data #[a(href="/roles/" + role.id + "/") #{role.name}]
        #user_edit_button_container.edituser.layout-row.layout-justify-between.authUI(data-fetch="user_edit" data-href="/users/edit")
        #user_add_button_container.adduser.layout-row.layout-justify-between.authUI(data-fetch="user_add" data-href="/users/add")
      .description.layout-col.layout-xs-hidden.layout-sm-hidden.layout-md-hidden.layout-sd-width-3-8.layout-lg-width-3-8.layout-xl-width-4-8
        .infotext.section-hdg.section-hdg-3 User List View
        .infotext This is a list of users. You may edit the user's details by clicking on a user entry.
        .infotext Click the "Add User" button to create a new user.
        .infotext Each user is given a user ID that is used by stockr to keep track of the user and the user's cases.
